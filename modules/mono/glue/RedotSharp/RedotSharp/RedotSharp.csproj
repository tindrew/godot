<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <ProjectGuid>{AEBF0036-DA76-4341-B651-A3F2856AB2FA}</ProjectGuid>
    <OutputPath>bin/$(Configuration)</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <RootNamespace>Redot</RootNamespace>
    <TargetFramework>net6.0</TargetFramework>
    <DocumentationFile>$(OutputPath)/$(AssemblyName).xml</DocumentationFile>
    <EnableDefaultItems>false</EnableDefaultItems>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>10</LangVersion>

    <AnalysisMode>Recommended</AnalysisMode>
  </PropertyGroup>
  <PropertyGroup>
    <Description>Redot C# Core API.</Description>
    <Authors>Redot Engine contributors</Authors>

    <PackageId>RedotSharp</PackageId>
    <Version>4.4.0</Version>
    <PackageVersion>$(PackageVersion_RedotSharp)</PackageVersion>
    <RepositoryUrl>https://github.com/redotengine/redot/tree/master/modules/mono/glue/RedotSharp/RedotSharp</RepositoryUrl>
    <PackageProjectUrl>$(RepositoryUrl)</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright (c) Redot Engine contributors</Copyright>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>
  <ItemGroup>
    <!-- SdkPackageVersions.props for easy access -->
    <None Include="$(RedotSdkPackageVersionsFilePath)">
      <Link>SdkPackageVersions.props</Link>
    </None>
  </ItemGroup>
  <PropertyGroup>
    <DefineConstants>$(DefineConstants);redot</DefineConstants>
    <DefineConstants Condition=" '$(RedotFloat64)' == 'true' ">REAL_T_IS_DOUBLE;$(DefineConstants)</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="ReflectionAnalyzers" Version="0.1.22-dev" PrivateAssets="all" IncludeAssets="runtime; build; native; contentfiles; analyzers" />
    <!--PackageReference Include="IDisposableAnalyzers" Version="3.4.13" PrivateAssets="all" IncludeAssets="runtime; build; native; contentfiles; analyzers" /-->
  </ItemGroup>
  <ItemGroup>
